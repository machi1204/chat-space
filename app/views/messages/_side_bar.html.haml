.sidebar
  .sidebar_header
    .sidebar_header__box
      %p.sidebar_header__box__name
        = current_user.name
      %ul.sidebar_header__box__menu
        %li.sidebar_header__box__menu__edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.sidebar_header__box__menu__new
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .sidebar_list 
    - current_user.groups.each do |group|
      .sidebar_list__groups
        = link_to group_messages_path(group) do
          %p.sidebar_list__groups__name
            = group.name
          %p.sidebar_list__groups__message
            = group.show_last_message

